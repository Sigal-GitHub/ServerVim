" vimrc 文件修改之后自动加载，linux
autocmd! bufwritepost .vimrc source %

" 显示行号
set number
" 启动状态栏信息
set laststatus=2
" 设置命令行的高度为2，默认为1
set cmdheight=2
" 突出显示当前行
set cursorline
" 显示未完成的命令
set showcmd
" 高亮匹配括号
set showmatch
" 显示你所处于的模式
set showmode

" 高亮搜索
set hlsearch
" 在输入要搜索的文字时，实时匹配
set incsearch
" 搜索模式里忽略大小写
set ignorecase
" 搜索到文件两端时不重新搜索
set nowrapscan

" 在上下移动光标时，光标的上方或者下方至少会保留显示的行数
set scrolloff=4

" 打开语法高亮
syntax enable
" 允许用制定语法高亮配色方案替换默认方案
syntax on
" 针对不同的文件类型采用不同的缩进格式
filetype indent on
" 启用补全
filetype plugin indent on
" 启用智能对齐方式
set smartindent
" 设置退格键可用
set backspace=2
" 自动对齐
set autoindent
" 设置自动缩进
set ai!
" 右下角显示光标位置的状态行
set ruler
" 将 Tab 转换为空格
set expandtab
" 设置 Tab 的宽度
set tabstop=4
" 换行时自动缩进宽度
set shiftwidth=4
" 按退格键一次可以删掉4个空格
set softtabstop=4
" 用“<”和“>”缩进时使用shiftWidth的倍数
set shiftround
" 按一次退格键就删除一个shiftwidth宽度
set smarttab
" 当文件在外部被修改的时候，自动更新该文件
set autoread

" 打开自动定位到最后编辑的位置，需要确认.viminfo当前用户可写
if has("autocmd")
    au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif


" 自定义快捷键

inoremap fj <Esc>

let mapleader=","

nnoremap ; :

vnoremap < <gv
vnoremap > >gv

" 引号括号的自动匹配
:inoremap ( ()<ESC>i
:inoremap ) <c-r>=ClosePair(')')<CR>
:inoremap < <><ESC>i
:inoremap > <c-r>=ClosePair('>')<CR>
:inoremap { {}<ESC>i
:inoremap } <c-r>=ClosePair('}')<CR>
:inoremap [ []<ESC>i
:inoremap ] <c-r>=ClosePair(']')<CR>
:inoremap " ""<ESC>i
:inoremap ' ''<ESC>i
:inoremap ` ``<ESC>i
